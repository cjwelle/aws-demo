{
  "variables": {
    "region": "{{env `region`}}",
    "source_ami": "{{env `source_ami`}}",
    "vpc_id": "{{env `vpc_id`}}",
    "subnet_id": "{{env `subnet_id`}}",
    "instance_type": "{{env `ec2_instance_type`}}",
    "service": "{{user `service`}}",
    "wrk_home": "{{env `wrk_home`}}",
    "service_name": "{{user `service_name`}}",
    "s3_log_bucket": "{{user `s3_log_bucket`}}"
  },
  "builders": [
    {
    "type": "amazon-ebs",
    "region": "{{user `region`}}",
    "source_ami": "{{user `source_ami`}}",
    "associate_public_ip_address": true,
    "enhanced_networking": true,
    "ssh_private_ip" : false,
    "vpc_id": "{{user `vpc_id`}}",
    "subnet_id": "{{user `subnet_id`}}",
    "instance_type": "m3.medium",
    "ssh_username": "ubuntu",
    "ami_name": "default_base-{{user `service_name`}}-{{timestamp}}",
    "tags" : {
      "Name": "Base Image-{{user `service_name`}}-{{timestamp}}",
      "created_on": "{{isotime}}"
    }
  }
],
  "provisioners": [
    {
      "type": "shell",
      "inline": [
        "sudo apt-get install -y software-properties-common",
        "sudo apt-add-repository ppa:ansible\/ansible -y",
        "sudo apt-get update",
        "sudo apt-get install -y python-pip ansible ",
        "sudo pip install --upgrade pip",
        "sudo pip install awscli boto netaddr -U",
        "mkdir /tmp/ansible_files"
      ]
    },
    {
      "type": "ansible-local",
      "playbook_file": "{{user `wrk_home` }}/services/default_base/default_base_ami.yml",
      "playbook_dir": "{{user `wrk_home` }}/",
      "staging_directory" : "/tmp/ansible_files",
      "extra_arguments": [
        "--extra-vars",
        "ansible_ssh_hostname=localhost",
        "--extra-vars",
        "vm_type=local",
        "--extra-vars",
        "re_init=false",
        "--extra-vars",
        "local_install=yes",
        "--extra-vars",
        "install_packages=yes",
        "--extra-vars",
        "s3_log_bucket={{user `s3_log_bucket`}}"
      ]
    }
  ]
}
